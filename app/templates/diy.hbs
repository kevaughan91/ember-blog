            {{/link-to}}
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row fashion--image-list-container">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="diy--title">Hanging leaf frames</div>
            <div class="diy--border"></div>
            {{#link-to "diy.view" "leaf-frames"}}
                <img class="fashion--image" src="/assets/images/diy2.jpg">
            {{/link-to}}
        </div>
        <div class="col-md-1"></div>
    </div>
